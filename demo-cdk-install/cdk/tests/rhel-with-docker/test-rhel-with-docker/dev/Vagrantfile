# -*- mode: ruby -*-
# vi: set ft=ruby :
Vagrant.configure("2") do |config|
  config.vm.define "app" do |app|
    app.vm.provider "docker" do |d|
      d.build_dir = "."
      d.vagrant_vagrantfile = "../docker-host/Vagrantfile"
      d.force_host_vm = "true"
    end
    app.vm.synced_folder './', '/app'
  end
end

